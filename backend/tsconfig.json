{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2020" /* Updated for better compatibility with modern JavaScript features. */,
		"lib": [
			"ESNext",
			"DOM"
		] /* Updated to use ESNext for the latest features, keeping DOM for web APIs. */,
		"module": "CommonJS" /* Still CommonJS, as it's compatible with most Node.js environments. */,
		"moduleResolution": "node" /* Node resolution strategy, necessary for resolving node_modules. */,
		"baseUrl": "./" /* Base directory for resolving non-relative module names. */,
		"paths": {
			"@config/*": ["src/config/*"],
			"@modules/*": ["src/modules/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@utils/*": ["src/utils/*"]
		} /* Paths to create aliases for cleaner imports. */,

		/* TypeScript Compiler Features */
		// "strict": true /* Enable all strict type-checking options for better type safety. */,
		"noImplicitAny": true /* Report errors on expressions and declarations with an implied `any` type. */,
		"strictNullChecks": true /* Ensure that `null` and `undefined` are handled distinctly. */,
		"strictFunctionTypes": true /* Ensure that parameter and return types are compatible. */,
		"noImplicitThis": true /* Disallow usage of `this` keyword when not explicitly defined. */,
		"alwaysStrict": true /* Emit 'use strict' directives in the emitted JavaScript. */,
		"noUnusedLocals": true /* Report errors on unused local variables. */,
		"noUnusedParameters": true /* Report errors on unused function parameters. */,
		"noImplicitReturns": true /* Ensure that all code paths in a function return a value. */,
		"noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statements. */,

		/* Module and Interop Constraints */
		"esModuleInterop": true /* Emit additional code to support CommonJS and ES Modules interop. */,
		"allowSyntheticDefaultImports": true /* Allow default imports from modules with no default export. */,
		"emitDecoratorMetadata": true /* Emit metadata for decorators, required by some libraries like TypeGraphQL. */,
		"experimentalDecorators": true /* Enable support for decorators. */,
		"resolveJsonModule": true /* Enable importing .json files as modules. */,
		// "isolatedModules": true /* Ensure that each file can be safely transpiled without relying on other imports. */,

		/* Output Settings */
		"outDir": "dist" /* Redirect output structure to the `dist` directory. */,
		"removeComments": true /* Remove comments from emitted JavaScript files. */,
		"sourceMap": true /* Generate source maps for easier debugging. */,
		"inlineSources": true /* Include original source code in the source maps. */,
		"skipLibCheck": true /* Skip type checking of all declaration files (`.d.ts`). */,
		"forceConsistentCasingInFileNames": true /* Ensure imports have consistent casing in file names. */
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
